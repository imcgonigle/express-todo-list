<main>
  <div id="main-todolist-container" class="container">

      <div id="quick-add" class="row">
        <div class="col m10">
          <div class="card">
            <div class="card-content">
                <form id="quick-add-form" class="" action="index.html" method="post">
                <div class="input-field">
                  <input id="card-title" type="text" required>
                  <label for="card-title">New Card Title</label>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>

    <div id="instructions" class="row">
      <div class="col m10" >
        <div class="card hoverable">
          <div class="card-content">
            <p class="flow-text">To add something just click the floating red button down there to the right!</p>
          </div>
        </div>
      </div>
    </div>
    <div id="todo-list">
    </div>

    <!-- Modal Trigger -->
    <div id="todo-list-actions" class="horizontal right-align">
        <a class="btn-floating btn-large waves-effect modal-trigger waves-light red right" href="#modal1"><i class="material-icons">add</i></a>
    </div>
    <!-- Modal Structure -->
    <div id="modal1" class="modal modal-fixed-footer">
      <form id="add-item" class="col s12" action="index.html" method="post">
      <div class="modal-content">
        <div class="row">
          <div class="input-field col s12">
            <input id="item" type="text" name="item" required placeholder="Add todo item here!">
            <label for="item">Item</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="item-location" required name="item-location" type="text">
            <label for="item-location">Location</label>
          </div>
        </div>
        <div class="row">
          <p class="grey-text">How long will this take</p>
          <div class="input-field col s3">
            <input id="time-hr" type="text" name="time-hour">
            <label for="time-hr">Hours</label>
          </div>
          <div class="input-field col s3">
            <input id="time-min" type="text" name="time-minute">
            <label for="time-min">Minutes</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <textarea id="item-description" class="materialize-textarea" name="item-description" rows="8" cols="40" placeholder="Add some more information about what you need to do here."></textarea>
            <label for="item-description">Description</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <p class="range-field">
              <span class="grey-text center">Importance(0-10)</span>
              <input type="range" id="importance-scale" min="0" max="10" />
            </p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <input type="button" class="btn left red modal-close waves-effect" value="cancel">
        <input class=" modal-action waves-effect waves-green btn"type="submit" value="Add">
      </div>
    </form>
    </div>
  </div>
